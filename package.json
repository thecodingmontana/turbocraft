{
  "name": "turbocraft",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "check-and-fix": "pnpm check && pnpm fix",
    "deps": "pnpm dlx taze@latest -Ilwr",
    "deps:major": "pnpm dlx taze@latest major -Ilwr",
    "commit": "git add . && git cz",
    "mobile": "pnpm --filter @repo/native run start",
    "prepare": "lefthook install",
    "knip": "knip",
    "clean": "rm -rf node_modules .turbo pnpm-lock.yaml",
    "clean:workspaces": "turbo clean",
    "reset": "pnpm clean:workspaces && pnpm clean && rm -rf apps/*/node_modules packages/*/node_modules apps/*/.next packages/*/.next .turbo && pnpm install"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/node": "^25.2.2",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "husky": "^9.1.7",
    "knip": "^5.83.1",
    "lefthook": "^2.1.0",
    "lint-staged": "^16.2.7",
    "turbo": "^2.8.3",
    "typescript": "5.9.3",
    "ultracite": "7.1.5"
  },
  "packageManager": "pnpm@10.29.2",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": true
    }
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.13",
      "@types/react-dom": "19.2.3",
      "react": "19.1.5",
      "react-dom": "19.1.5"
    }
  }
}
