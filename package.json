{
  "name": "turbocraft",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "check-and-fix": "pnpm check && pnpm fix",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "husky": "^9.1.7",
    "lefthook": "^2.0.13",
    "lint-staged": "^16.2.7",
    "turbo": "^2.7.2",
    "typescript": "5.9.2",
    "ultracite": "7.0.8"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix"
    ]
  }
}
