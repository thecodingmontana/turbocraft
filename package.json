{
  "name": "turbocraft",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "check-and-fix": "pnpm check && pnpm fix",
    "deps": "pnpm dlx taze@latest -Ilwr",
    "deps:major": "pnpm dlx taze@latest major -Ilwr",
    "commit": "git add . && git cz",
    "prepare": "lefthook install",
    "knip": "knip"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@commitlint/cli": "20.3.0",
    "@commitlint/config-conventional": "20.3.0",
    "@types/node": "25.0.3",
    "commitizen": "4.3.1",
    "cz-git": "1.12.0",
    "husky": "9.1.7",
    "knip": "5.79.0",
    "lefthook": "2.0.13",
    "lint-staged": "16.2.7",
    "turbo": "2.7.2",
    "typescript": "5.9.3",
    "ultracite": "7.0.8"
  },
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": true
    }
  },
  "pnpm": {
    "overrides": {
      "react": "19.1.4",
      "react-dom": "19.1.4",
      "@types/react": "19.2.3",
      "@types/react-dom": "19.2.3"
    }
  }
}
